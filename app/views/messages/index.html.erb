<div class="panel panel-default messagePanel">
    <h1 class="h4">メッセージ一覧</h2>
    <% @messages.each do |message| %>
    <div class="panel-group">
        <div class="panel panel-info">
            <div class="panel-heading"><%= message.name %></div>
            <div class="panel-body"><p><%= message.body %></p></div>
        </div>
    </div>
        <% end %>

</div>

<%= form_for(Message.new, :html => {:class => "messageForm panel panel-primary"}) do |f| %>
<div class="form">
    <div class="form-group">
        <label for="messageName">名前 :</label>
        <%= f.text_field :name , :placeholder => "name" , class: "form-control" , id: "messageName" %>
    </div>
    <div class="form-group">
        <label for="messageText">内容 :</label>
        <%= f.text_area :body , :placeholder => "content" , :maxlength => "140" , class: "form-control" , id: "messageText" %>
    </div>
    <%= f.submit class: "btn btn-sm btn-primary" %>
</div>
    
<% end %>
