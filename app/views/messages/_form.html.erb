<%= form_for(Message.new, :html => {:class => "messageForm panel panel-primary"}) do |f| %>
    <% if @message.errors.present? %>
        <div class="alert alert-danger">
            <%= alert %>
            <ul>
                <% @message.errors.full_messages.each do |full_message| %>
                <li>
                    <%= full_message %>
                </li>
                <% end %>
            </ul>
        </div>
    <% end %>
    <div class="form">
        <div class="form-group">
            <label for="messageName">名前 :</label>
            <%= f.text_field :name , :placeholder => "name" , class: "form-control" , id: "messageName" %>
        </div>
        <div class="form-group">
            <label for="messageText">内容 :</label>
            <%= f.text_area :body , :placeholder => "contents" , :maxlength => "140" , class: "form-control" , id: "messageText" %>
        </div>
        <%= f.submit class: "btn btn-sm btn-primary" %>
    </div>
<% end %>